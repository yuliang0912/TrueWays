
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TrueWays.Core.Models.Result.ApiPageList<TrueWays.Core.Models.CustomerInfo>

<style type="text/css">
    .red {
        color: red;
    }
    .green {
        color: green;
    }
</style>
<div class="page-header">
    <h1 class="form-inline">
        商户管理：
        <small>
            <i class="icon-search"></i>
            <div class="form-group">
                <input type="text" name="staff_keyword" id="keyWords" value="@(ViewBag.keyWords)" style="width: 160px;" class="form-control input-sm" placeholder="请输入商户姓名">
            </div>
            <div class="form-group">
                <input type="text" name="staff_keyword" id="phone" value="@(ViewBag.phone)" style="width: 160px;" class="form-control input-sm" placeholder="请输入手机号码">
            </div>
            <div class="form-group">
                <label class="sr-only" for="status">状态</label>
                <select name="pay_status" id="status" class="form-control input-sm filter_goods">
                    <option value="-1">状态</option>
                    <option value="0">有效</option>
                    <option value="1">无效</option>
                </select>
            </div>
            <button type="button" class="btn btn-primary btn-sm " id="staff-search">搜索</button>
        </small>
        <a href="/customer/add" class="btn btn-info btn-sm pull-right back-to-list"> <i class="glyphicon glyphicon-plus"></i> 添加商户</a>
    </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>序号</th>
                <th>商家编码</th>
                <th>商家名称</th>
                <th>简称</th>
                <th>联系人</th>
                <th>固定电话</th>
                <th>手机</th>
                <th>地址</th>
                <th>状态</th>
                <th>创建时间</th>
                <th>业务员</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PageList)
            {
                <tr align="center">
                    <td>@item.CustomerId</td>
                    <td>@item.ShopNo</td>
                    <td>@item.Name</td>
                    <td>@item.Abbreviation</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.Mobile</td>
                    <td>@item.Address</td>
                    <td>
                        <span class="label @(item.Status == 0 ? "label-success" : "label-warning")">@(item.Status == 0 ? "有效" : "无效")</span>
                    </td>
                    <td>@item.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@item.Salesman</td>
                    <td>
                        <a href="http://www.qingfeng.com/staff/setrole?userId=@(item.CustomerId)" class="setting">编辑</a>
                        <a href="http://www.qingfeng.com/staff/setrole?userId=@(item.CustomerId)" class="setting">编辑</a>
                        <a href="http://www.qingfeng.com/staff/edit?userId=@(item.CustomerId)" class="setting">生成二维码</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $('.back-to-list').off('click').on('click', function() {
        var url = $('#page-content').attr('data-back-url');
        if (!url) {
            url = $(this).attr('href');
        }

        $.getPageContent({ url: url });
        return false;
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $.etopConfirm();
        $.showModal({
            formId: 'user-form',
            beforeSubmit: function (formData, jqForm, options) {
                var l = formData.length;
                for (var i = 0; i < l; i++) {
                    if (formData[i].value == '') {
                        if (formData[i].name == 'username' || formData[i].name == 'password' || formData[i].name == 'password_confirm') {
                            $('#' + formData[i].name).parents('.form-group').addClass('has-error');
                            return false;
                        }
                        else {
                            $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                        }
                    }
                    else {
                        $('#' + formData[i].name).parents('.form-group').removeClass('has-error');
                    }
                }
                return true;
            },
            success: function (response, status) {
                if (response.error == 0) {
                    $('#etop-modal').modal('hide');
                    $('#etop-modal').on('hidden.bs.modal', function (e) {
                        $.pageReload();
                    });
                }
                else {
                    if (response.error == 9) {
                        var data = response.data;
                        var msg = '';
                        for (key in data) {
                            msg += data[key] + '\r\n';
                        }
                        alert(msg);
                    }
                    else {
                        alert(response.msg);
                    }
                }

                return false;
            },
        });
        $.showModal({
            selector: '.setting',
            formId: 'setting-form',
            beforeSubmit: function (formData, jqForm, options) {
                return true;
            },
            success: function (response, status) {
                alert(response.msg);
                if (response.error == 0) {
                    $('#etop-modal').modal('hide');
                    $.pageReload();
                }
                return false;
            },
        });

        $('#staff-search').click(function () {
            var keyword = $('#keyWords').val();
            var phone = $("#phone").val();
            var status = $("#status").val();

            if (keyword === '' && phone === ''&& status === "-1") {
                layer.alert("请输入搜索条件");
                return;
            }
            var url = "/customer/index" + '?keyWords=' + keyword + "&phone=" + phone;
            $.getPageContent({ url: url });
            return false;
        });

        $('.pagination a').click(function () {
            var url = $(this).attr('href');
            $.getPageContent({ url: url });
            return false;
        });
    });
</script>



