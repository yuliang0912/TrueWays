
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>厨卫士报修</title>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="viewport" content="height=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="/contentV2/css/layer.css" id="layui_layer_skinlayercss">
    <script type="text/javascript" src="/contentV2/js/jquery.min.js"></script>
    <script src="/content/js/qingfeng.core.js"></script>
    <script type="text/javascript" src="/ContentV2/js/jquery.form.js"></script>
    <script src="/ContentV2/js/layer.js"></script>
    <style>
        * {
            vertical-align: baseline;
            font-weight: inherit;
            font-family: inherit;
            font-style: inherit;
            font-size: 100%;
            outline: 0;
            padding: 0;
            margin: 0;
            border: 0;
            word-wrap: break-word;
            box-sizing: border-box;
        }

        html, body, ul, ol, dl, dd, p, h1, h2, h3, h4, h5, h6, th, td, input, select, textarea {
            margin: 0;
            padding: 0;
        }

        li {
            list-style: none;
        }

        a, a:hover {
            text-decoration: none;
        }

        table {
            empty-cells: show;
            border-collapse: collapse;
        }

        textarea {
            resize: none;
            overflow: auto;
            outline: none;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: normal;
        }

        a img, :link img, :visited img {
            border: 0px;
        }

        .v-middle {
            text-align: center;
        }

        .border-none {
            border: none;
        }

        .header {
            position: fixed;
            z-index: 11;
            top: 0;
            width: 100%;
            height: 3em;
            line-height: 3em;
            background: #333;
            color: #fff;
            text-align: center;
        }

        .close {
            position: absolute;
            left: 2%;
            color: #fff;
        }

        .title {
            font-size: 1.3em;
        }

        .page-container {
            margin: 0 5%;
        }

        .con-logo {
            width: 100%;
            text-align: center;
            margin: 7em auto 3em auto;
        }

        .con-tip {
            line-height: 1.8em;
            padding: .3em;
            color: #fa6600;
            font-size: 1.1em;
            border: 1px solid #fa6600;
            border-radius: .3em;
            text-align: center;
        }

        .item-input {
            color: #666;
            font-size: 1.1em;
        }

        .tab-content {
            margin: 3em 0 9em 0;
            color: #989898;
        }

        .item-content {
            margin-top: 2em;
            padding-bottom: .4em;
            border-bottom: 1px solid #e6e6e6;
        }

        .item-label {
            float: left;
            width: 20%;
        }

        .item-input {
            color: #666;
            font-size: 1.2em;
        }

        .item-btn {
            margin: 4em 0 1em 0;
        }

        .item-cancel {
            float: right;
            color: #999;
        }

        .con-logo {
            width: 100%;
            text-align: center;
            margin: 2em auto;
        }

            .con-logo img {
                width: 6em;
            }

        .item-btn {
            margin: 3em 0 1em 0;
        }
    </style>

</head>

<body>
    <div class="page-container">
        <div class="con-logo">
            <img src="/Content/images/logo.png" />
        </div>
        <div class="con-tip">
            厨卫士客服将在10分钟内与您联系<br />请确保电话号码准确和保持通畅
        </div>
        <div class="tab-content">
            <div class="tab-pane">
                <form class="form-horizontal" id="order-form" action="/customer/AddCustomOrder" method="post">
                    <div class="item-content">
                        <div class="item-label">店名</div>
                        <div class="item-input">
                            <input type="text" id="shopName" name="shopName" maxlength="40">
                        </div>
                        <div class="item-error"></div>
                    </div>
                    <div class="item-content">
                        <div class="item-label">联系人</div>
                        <div class="item-input">
                            <input type="text" id="contactName" name="contactName" value="" maxlength="20">
                        </div>
                        <div class="item-error"></div>
                    </div>
                    <div class="item-content">
                        <div class="item-label">联系方式</div>
                        <div class="item-input">
                            <input type="text" id="phone" name="phone" value="" maxlength="20">
                        </div>
                        <div class="item-error"></div>
                    </div>
                    <div id="item-btn" class="item-btn">
                        <input type="button" id="submit" value="立即报修" style="width:100%;height:2.6em;border-radius:.4em;background:#fa6600;color:#fff;font-size:1.3em; -webkit-border-radius:.4em;">
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript">
    var isSubmit = false;
    $("#submit").click(function () {
        if (isSubmit) {
            return;
        }

        if ($("#shopName").val().length < 1 || $("#contactName").val().length < 1 || $("#phone").val().length < 1) {
            layer.msg("您填写的信息不完整,请补充完整后再提交!");
            return;
        }

        isSubmit = true;
        $("#submit").css({ background: "#dfdfdf" }).val("提交中");
        $.ajax({
            cache: true,
            type: "POST",
            url: "/customer/AddCustomOrder",
            data: new FormData($('#order-form')[0]),
            async: false,
            processData: false,
            contentType: false
        }).done(function (res) {
            if (res.data === true) {
                layer.msg("提交成功，请留意来电");
                $("#submit").css({ background: "#dfdfdf" }).val("提交成功");
            } else {
                isSubmit = false;
                layer.msg("报修失败");
            }
        }).fail(function () {
            isSubmit = false;
            layer.msg("报修失败");
        });
        return true;
    });
</script>
</html>
