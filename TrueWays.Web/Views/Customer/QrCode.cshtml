
@{
    ViewBag.Title = "QrCode";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>厨卫士报修</title>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="viewport" content="height=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <style>
        * {
            vertical-align: baseline;
            font-weight: inherit;
            font-family: inherit;
            font-style: inherit;
            font-size: 100%;
            outline: 0;
            padding: 0;
            margin: 0;
            border: 0;
            word-wrap: break-word;
            box-sizing: border-box;
        }

        html, body, ul, ol, dl, dd, p, h1, h2, h3, h4, h5, h6, th, td, input, select, textarea {
            margin: 0;
            padding: 0;
        }

        li {
            list-style: none;
        }

        a, a:hover {
            text-decoration: none;
        }

        table {
            empty-cells: show;
            border-collapse: collapse;
        }

        textarea {
            resize: none;
            overflow: auto;
            outline: none;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: normal;
        }

        a img, :link img, :visited img {
            border: 0px;
        }

        .v-middle {
            text-align: center;
        }

        .border-none {
            border: none;
        }

        .header {
            position: fixed;
            z-index: 11;
            top: 0;
            width: 100%;
            height: 3em;
            line-height: 3em;
            background: #333;
            color: #fff;
            text-align: center;
        }

        .close {
            position: absolute;
            left: 2%;
            color: #fff;
        }

        .title {
            font-size: 1.3em;
        }

        .page-container {
            margin: 0 5%;
        }

        .con-logo {
            width: 100%;
            text-align: center;
            margin: 7em auto 3em auto;
        }

        .con-tip {
            height: 5em;
            line-height: 2em;
            padding: .3em;
            color: #fa6600;
            font-size: 1.1em;
            border: 1px solid #fa6600;
            border-radius: .3em;
            text-align: center;
        }

        .tab-content {
            margin: 3em 0 9em 0;
            color: #989898;
        }

        .item-content {
            margin-top: 2em;
            padding-bottom: .4em;
            border-bottom: 1px solid #e6e6e6;
        }

        .item-label {
            float: left;
            width: 20%;
        }

        .item-input {
            color: #666;
            font-size: 1.2em;
        }

        .item-btn {
            margin: 4em 0 1em 0;
        }

            .item-btn > input {
                width: 100%;
                height: 2.8em;
                border-radius: .4em;
                background: #fa6600;
                color: #fff;
                font-size: 1.3em;
            }

        .item-cancel {
            float: right;
            color: #999;
        }
    </style>

</head>

<body>
    <div class="page-container">
        <div class="con-logo"><img src="/Content/images/logo.png" /></div>
        <div class="con-tip">厨卫士客服将在10分钟内与您联系<br />请确保电话号码准确和保持通畅</div>
        <div class="tab-content">
            <div class="tab-pane">
                <form class="form-horizontal" action="#" method="post">
                    <div class="item-content">
                        <div class="item-label">店名</div>
                        <div class="item-input">
                            <input type="text" name="" id="" value="龙门客栈" readonly="readonly">
                        </div>
                        <div class="item-error"></div>
                    </div>

                    <div class="item-content">
                        <div class="item-label">联系人</div>
                        <div class="item-input">
                            <input type="text" name="" id="" value="赵淮安" readonly="readonly">
                        </div>
                        <div class="item-error"></div>
                    </div>

                    <div class="item-content">
                        <div class="item-label">手机</div>
                        <div class="item-input">
                            <input type="text" name="" id="" value="18623697752" readonly="readonly">
                        </div>
                        <div class="item-error"></div>
                    </div>

                    <div class="item-btn">
                        <input type="submit" id="" value="立即报修">
                    </div>
                    <div class="item-cancel">取消报修</div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

